<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox fx:id="vbox" alignment="CENTER" fillWidth="false" prefHeight="637.0" prefWidth="1147.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.github.dangelcrack.controller.AddDietController">
    <padding>
        <Insets bottom="-20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <TextField fx:id="name" promptText="Enter diet name"
                   style="-fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0; -fx-background-color: -fx-focus-color, -fx-background;">
            <VBox.margin>
                <Insets bottom="20.0" top="10.0"/>
            </VBox.margin>
            <font>
                <Font name="Arial Bold Italic" size="15.0"/>
            </font>
        </TextField>
        <TextArea fx:id="description" prefHeight="200.0" prefWidth="200.0" promptText="Enter diet description"
                  style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;"
        />
        <ComboBox fx:id="typeDiet" prefHeight="27.0" prefWidth="204.0" promptText="Select Diet Type"
                  style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;">
            <VBox.margin>
                <Insets bottom="20.0"/>
            </VBox.margin>
        </ComboBox>
        <HBox alignment="CENTER" spacing="20.0">
            <Button onAction="#closeWindow"
                    style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;"
                    text="Add Diet">
                <VBox.margin>
                    <Insets bottom="20.0"/>
                </VBox.margin>
            </Button>
        </HBox>
    </children>
</VBox>
