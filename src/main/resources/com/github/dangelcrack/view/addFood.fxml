<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox fx:id="hBox" alignment="CENTER" prefHeight="637.0" prefWidth="1147.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.dangelcrack.controller.AddFoodController">
   <children>
      <VBox prefHeight="426.0" prefWidth="884.0" spacing="10.0">
         <children>
            <HBox spacing="20.0">
               <children>
                  <VBox alignment="TOP_CENTER" spacing="10.0">
                     <children>
                        <TextField fx:id="name" prefHeight="27.0" prefWidth="200.0" promptText="Food Name" />
                        <ComboBox fx:id="type" prefHeight="27.0" prefWidth="200.0" promptText="Type of Food" />
                        <TextField fx:id="calories" prefHeight="27.0" prefWidth="200.0" promptText="Calories" />
                        <ComboBox fx:id="dietaHaveFood" prefHeight="27.0" prefWidth="200.0" promptText="Select Diet" />
                        <HBox spacing="10.0">
                           <children>
                              <Button fx:id="addDiet" text="Add Diet" />
                              <Button fx:id="deleteDiet" text="Remove Diet" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <TableView fx:id="tableView" prefHeight="300.0" prefWidth="400.0">
                           <columns>
                              <TableColumn fx:id="columnName" text="Diet Name" />
                           </columns>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                           <children>
                              <Button fx:id="deleteFood" text="Delete Food" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button onAction="#closeWindow" text="Save Food" />
         </children>
      </VBox>
   </children>
</HBox>
