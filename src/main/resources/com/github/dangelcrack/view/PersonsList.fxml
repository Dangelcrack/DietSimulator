<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" alignment="CENTER" prefHeight="347.0" prefWidth="729.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.dangelcrack.controller.PersonsController">
    <children>
        <ImageView fitHeight="157.0" fitWidth="208.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../media/ModalImageUtils/img.png" />
            </image>
            <effect>
                <Glow />
            </effect>
        </ImageView>

        <!-- Tabla para mostrar personas -->
        <TableView fx:id="tableViewPersona" editable="true" maxWidth="1000.0" minWidth="1000.0" prefWidth="1000.0">
            <columns>
                <TableColumn fx:id="columnNamePerson" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" text="Name" />
                <TableColumn fx:id="columnPeso" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" resizable="false" text="Weight" />
                <TableColumn fx:id="columnAltura" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" resizable="false" text="Height" />
                <TableColumn fx:id="columnEdad" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" resizable="false" text="Age" />
                <TableColumn fx:id="columnNameDiet" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" resizable="false" text="Diet"/>

            </columns>
        </TableView>
        <HBox alignment="CENTER" spacing="50">
            <children>
                <Button mnemonicParsing="false" onAction="#addPersona" text="Add" />
                <Button mnemonicParsing="false" onAction="#deletePersona" text="Delete" />
                <Button mnemonicParsing="false" onAction="#editPersona" text="Edit" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
