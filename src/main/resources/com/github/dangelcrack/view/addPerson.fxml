<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" alignment="CENTER" prefHeight="637.0" prefWidth="1147.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.dangelcrack.controller.AddPersonController">
    <children>
        <HBox alignment="CENTER" spacing="30.0">
            <VBox alignment="TOP_CENTER" prefWidth="300.0" spacing="20.0">
                <children>
                    <TextField fx:id="name" promptText="Enter Person Name" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;" />
                    <TextField fx:id="altura" promptText="Enter Height" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;" />
                    <TextField fx:id="peso" promptText="Enter Weight" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;" />
                    <TextField fx:id="edad" promptText="Enter Age" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;" />
                </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefWidth="300.0" spacing="20.0">
                <children>
                    <ComboBox fx:id="dietawithPerson" promptText="Select a Diet" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;" />
                    <HBox alignment="CENTER" spacing="20.0">
                        <children>
                            <Button fx:id="addDiet" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;" text="Add Diet" />
                            <Button fx:id="deleteDieta" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;" text="Delete Diet" />
                        </children>
                    </HBox>
                    <TableView fx:id="tableViewDieta" prefHeight="200.0" prefWidth="300.0">
                        <columns>
                            <TableColumn fx:id="columnNameDieta" prefWidth="300.0" resizable="false" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold;" text="Diet Name" />
                        </columns>
                    </TableView>
                </children>
            </VBox>
        </HBox>
        <Button onAction="#closeWindow" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;" text="Add Person">
            <VBox.margin>
                <Insets bottom="20.0" left="0.0" right="0.0" top="20.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>
