<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<VBox fx:id="vbox" alignment="CENTER" fillWidth="false" prefHeight="600.0" prefWidth="1099.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.dangelcrack.controller.EditDietController">
   <padding>
      <Insets bottom="-20.0" left="20.0" right="20.0" top="60.0" />
   </padding>
   <children>
      <ComboBox fx:id="dietaComboBox" prefHeight="27.0" prefWidth="204.0" promptText="Select Existing Diet" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </ComboBox>
      <TextField fx:id="name" promptText="Enter diet name" style="-fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0; -fx-background-color: -fx-focus-color, -fx-background;">
         <VBox.margin>
            <Insets bottom="20.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font name="Arial Bold Italic" size="15.0" />
         </font>
      </TextField>

      <!-- Diet Description -->
      <TextArea fx:id="description" prefHeight="200.0" prefWidth="200.0" promptText="Enter diet description"
                style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;"
      />

      <!-- Diet Type ComboBox -->
      <ComboBox fx:id="typeDiet" prefHeight="27.0" prefWidth="204.0" promptText="Select Diet Type" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </ComboBox>

      <!-- Button to Close and Save -->
      <HBox spacing="20.0" alignment="CENTER">
         <Button onAction="#closeWindow" style="-fx-font-family: 'Arial'; -fx-font-size: 15.0; -fx-font-style: italic; -fx-font-weight: bold; -fx-background-color: -fx-text-box-border, -fx-background; -fx-background-insets: 0, 0 0 1 0; -fx-background-radius: 0;" text="Edit Diet">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin>
         </Button>
      </HBox>
   </children>
</VBox>
